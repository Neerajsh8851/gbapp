<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="@dimen/v_spacing"
    android:layout_marginHorizontal="@dimen/page_h_margin"
    app:cardCornerRadius="12dp"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/content_dec_preview"
            android:src="@drawable/image_defult" />

        <ImageView
            android:id="@+id/btnDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:contentDescription="@string/download_button_desc"
            android:src="@drawable/ic_outline_download"
            app:tint="?attr/colorPrimary" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
