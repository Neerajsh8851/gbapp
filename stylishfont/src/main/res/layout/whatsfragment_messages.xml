<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/whatsgradient_background_wizard_media" />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="1.0dip" >

            <ImageView
                android:id="@+id/about_us_icon"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_margin="0.0dip"
                android:layout_weight="0.0"
                android:contentDescription="about_us_image"
                android:gravity="center"
                android:padding="0.0dip"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/fragment_messages_title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="0.0dip"
                android:layout_marginTop="150.0dip"
                android:layout_weight="0.0"
                android:gravity="center"
                android:paddingBottom="25.0dip"
                android:paddingTop="10.0dip"
                android:text="@string/app_name"
                android:textColor="@color/material_light_blue_500"
                android:textSize="23.0sp" />

            <TextView
                android:id="@+id/fragment_messages_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1.0dip"
                android:layout_marginTop="15.0dip"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:paddingTop="10.0dip"
                android:text="@string/about_us"
                android:textColor="@android:color/black"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/fragment_messages_email_text"
                android:layout_width="240.0dip"
                android:layout_height="wrap_content"
                android:layout_margin="8.0dip"
                android:gravity="center"
                android:text=""
                android:textColor="@color/material_light_blue_500"
                android:textSize="15.0sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>