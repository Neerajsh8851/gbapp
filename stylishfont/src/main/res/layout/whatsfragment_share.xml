<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/whatsgradient_background_wizard_media" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="1.0dip" >

        <ImageView
            android:id="@+id/fragment_share_icon"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="0.0dip"
            android:layout_weight="0.0"
            android:contentDescription="about_us_image"
            android:gravity="center"
            android:padding="0.0dip"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/fragment_shares_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="0.0dip"
            android:layout_marginTop="150.0dip"
            android:layout_weight="0.0"
            android:gravity="center"
            android:paddingBottom="80.0dip"
            android:paddingTop="10.0dip"
            android:text="@string/app_name"
            android:textColor="@color/material_blue_500"
            android:textSize="23.0sp" />

        <Button
            android:id="@+id/fragment_share_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/btnmain_whats"
            android:text="Share App to Friends"
            android:textColor="#000000" />
    </LinearLayout>

</RelativeLayout>